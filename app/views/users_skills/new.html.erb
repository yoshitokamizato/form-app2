<section id="new-users-skill-form">
  <% breadcrumb :new_user %>
  <h3 class="text-center">追加したいスキルを選択</h3>
  <section id="user-form">
    <%= simple_form_for @users_skill ,:url => {:action => :create} do |f| %>
      <table class="table">
        <tbody>
          <%= f.hidden_field :user_id, :value => @user.id %>
          <tr>
            <td>スキル</td>
            <td>
              <%= f.input :name, as: :select, collection: [["Ruby", "Ruby"],["JavaScript", "JavaScript"],["Java", "Java"],["PHP", "PHP"],["Python", "Python"]], label_method: :second, value_method: :first, label: false %>
            </td>
          </tr>
          <tr>
            <td>到達度</td>
            <td>
              <%= f.input :skill , collection: [[0, 0],[20, 20],[40, 40],[60, 60],[80, 80],[100, 100]], label: false %>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="btn-wrapper text-center">
        <p><%= f.button :submit, "送信", :class=>"btn btn-success" %></p>
      </div>
    <% end %>
  </section>
</section>
