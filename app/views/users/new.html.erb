<section id="new_user_form">
  <h3 class="text-center">基本情報</h3>
  <section id="user-form">
    <%= simple_form_for @user ,:url => {:action => :create} do |f| %>
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th scope="col">入力内容</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= f.input :name %></td>
          </tr>
          <tr>
            <td><%= f.input :age %></td>
          </tr>
          <tr>
            <td><%= f.input :mail %></td>
          </tr>
          <tr>
            <td><%= f.input :address %></td>
          </tr>
          <tr>
            <td><%= f.input :gender %></td>
          </tr>
          <tr>
            <td><%= f.input :program %></td>
          </tr>
          <tr>
            <td><%= f.collection_check_boxes :skils, [["Java", "Java"],["Ruby", "Ruby"],["PHP", "PHP"],["Python", "Python"]], :first, :last %></td>
          </tr>
          <tr>
            <td>画像<%= f.file_field :image %></td>
          </tr>
        </tbody>
      </table>
      <div class="btn-wrapper text-center">
        <p><%= f.button :submit, "送信", :class=>"btn btn-primary" %></p>
      </div>
    <% end %>
  </section>
</section>
