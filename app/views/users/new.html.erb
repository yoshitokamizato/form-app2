<h1 class="text-center">基本情報</h1>
<hr>
<div class="container">
  <div class="row">
    <div class="col-md-8">
      <div class="form-container">
        <%= simple_form_for @user ,:url => {:action => :create} do |f| %>
          <div class="form-input">
            <p><%= f.input :name %></p>
            <p><%= f.input :age %></p>
            <p><%= f.input :mail %></p>
            <p><%= f.input :address %></p>
            <p><%= f.input :gender %></p>
            <p><%= f.input :program %></p>
            <p><%= f.input :skils, as: :text %></p>
          </div>
          <div class="btn-wrapper text-center">
            <p><%= f.button :submit, "送信", :class=>"btn btn-primary" %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
