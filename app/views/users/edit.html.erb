<section id="edit-form">
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <div class="table-responsive">
          <%= form_for @user do |f| %>
            <table class="table">
              <thead>
                <tr>
                  <th>項目</th>
                  <th>入力内容</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>お名前</td>
                  <td><%= f.text_field :name %></td>
                </tr>
                <tr>
                  <td>年齢</td>
                  <td><%= f.text_field :age %></td>
                </tr>
                <tr>
                  <td>お住まい</td>
                  <td><%= f.text_field :address %></td>
                </tr>
                <tr>
                  <td>性別</td>
                  <td><%= f.text_field :gender %></td>
                </tr>
                <tr>
                  <td>得意言語</td>
                  <td><%= f.text_field :program %></td>
                </tr>
                <tr>
                  <td>スキル</td>
                  <td><%= f.text_field :skils %></td>
                </tr>
              </tbody>
            </table>
            <div class="btn-wrapper text-center">
              <p><%= f.submit "送信", :class=>"btn" %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
